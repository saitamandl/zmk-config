/**
 * Functions
 */
/** reuse basic mod-morph scheme */
#define SIMPLE_MORPH(NAME, MOD, BINDING1, BINDING2) \
    ZMK_BEHAVIOR(NAME, mod_morph, \
        mods = <(MOD_L ## MOD|MOD_R ## MOD)>; \
        bindings = <BINDING1>, <BINDING2>; \
    )

/** long-tap action on hold, short-tap action on all interrupts */
#define MT_CORE \
    flavor = "tap-preferred"; \
    tapping-term-ms = <MT_CORE_TAPPING_TERM_MS>; \
    quick-tap-ms = <MT_CORE_QUICK_TAP_MS>; \
    hold-trigger-key-positions = <0>;


&mt { MT_CORE };
/**
 * mask CTRL when holding left/right to avoid accidental jumps to beginning/end of document
 */
#define MASK_MODS(NAME, MODS, BINDING) \
    ZMK_BEHAVIOR(NAME, mod_morph, \
        bindings = <BINDING>, <BINDING>; \
        mods = <MODS>; \
    )

/**
 * hold-tap
 */
/** home-row-mods */
ZMK_BEHAVIOR(hrm, hold_tap,
    flavor = "balanced";
    tapping-term-ms = <HRM_TAPPING_TERM_MS>;
    quick-tap-ms = <HRM_QUICK_TAP_MS>;
    bindings = <&kp>, <&kp>;
)

/** modified home  used for  long tap left -> beginning of line*/
ZMK_BEHAVIOR(mt_home, hold_tap, bindings = <&masked_home>, <&kp>; MT_CORE)

/** modified end  used for  long tap right -> end of line*/
ZMK_BEHAVIOR(mt_end,  hold_tap,  bindings = <&masked_end>, <&kp>; MT_CORE)

/**
 * tap-dance
 */
/** tap: space | shift + tap: dot -> space -> sticky shift | hold: toggle to layer */
ZMK_BEHAVIOR(smart_space, hold_tap,
    flavor = "balanced";
    tapping-term-ms = <TAPPING_TERM_MS>;
    quick-tap-ms = <QUICK_TAP_MS>;
    bindings = <&to>, <&spc_morph>;
)

SIMPLE_MORPH(spc_morph, SFT, &kp SPACE, &dot_spc)

ZMK_BEHAVIOR(dot_spc, macro,
    wait-ms = <0>;
    tap-ms = <5>;
    bindings = <&kp DOT &kp SPACE &sk LSHFT>;
)

/** three tap */
ZMK_BEHAVIOR(smpl3tap, tap_dance,
    tapping-term-ms = <TAPPING_TERM_MS>;
    bindings = <&kp>, <&kp>, <&kp>;
)

/** toggle layers */
ZMK_BEHAVIOR(smpl3tog, tap_dance,
    tapping-term-ms = <TAPPING_TERM_MS>;
    bindings = <&to>, <&to>, <&to>;
)

/**
 * hold:  toggle layer | tap: bspc_del
 */
ZMK_BEHAVIOR(bspc_del_lyr, tap_dance,
    tapping-term-ms = <TAPPING_TERM_MS>;
    bindings = <&to>, <&bspc_del>;
)

/**
 * mod-morph
 */
 /** tap: backspace | lshift + tap: delete | rshft + tap: shift-delete */
ZMK_BEHAVIOR(bspc_del, mod_morph,
    bindings = <&kp BSPC>, <&kp DEL>;
    mods = <(MOD_LSFT|MOD_RSFT)>;
    keep-mods = <MOD_RSFT>;
)

/** tap: sticky left shift | double tap: capsword */
ZMK_BEHAVIOR(smart_shift, mod_morph,
    bindings = <&sk LSHFT>, <&caps_word>;
    mods = <(MOD_LSFT)>;
)

/**
 * mask CTRL when holding left/right to avoid accidental jumps to beginning/end of document
 */
MASK_MODS(masked_home, (MOD_LCTL), &kp HOME)
MASK_MODS(masked_end,  (MOD_LCTL), &kp END)


/**
 * macro
 */
 /** windows shut-down WIN + X + U + U */
ZMK_BEHAVIOR(win_shutdown, macro,
    wait-ms = <WAIT_MS>;
    tap-ms = <TAP_MS>;
    bindings = <&kp LG(X) &kp U &kp U>;
)

/** windows restart WIN + X + U + R */
ZMK_BEHAVIOR(win_restart, macro,
    wait-ms = <WAIT_MS>;
    tap-ms = <TAP_MS>;
    bindings = <&kp LG(X) &kp U &kp R>;
)

